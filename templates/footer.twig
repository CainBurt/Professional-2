<div class="left">
	<div class="left--top">
		{% include 'components/menu.twig' with {
			menu: footer_menu.get_items(),
			css_class: 'sub-navigation'
		} %}
	</div>
	<div class="left--bottom">
		<p>{{ _x('&copy; Trina Solar 2022 - All Rights Reserved','Footer','crowd') }}</p>
	</div>
</div>
{% if fn('get_privacy_policy_url') != "" %}
	<div class="center">
		<a href="{{ fn('get_privacy_policy_url') }}">{{ _x('Privacy Policy','Footer','crowd') }}</a>
	</div>
{% endif %}
<div class="right">
	{% for social in options.socials %}
		<a href="{{ social.social_link }}" target="_BLANK">
			<span class="fa-stack">
				<i class="fa-solid fa-circle fa-stack-2x "></i>
				<i class="{{ social.social_icon }} fa-stack-1x fa-inverse"></i>
			</span>
		</a>
		
	{% endfor %}
</div>